#!/usr/bin/env bash
# This script checks DNS records for specified subdomains of a given domain.

# Function to retrieve and display DNS information
get_dns_info() {
    local domain="$1"
    local subdomain="$2"

    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    for sub in "${subdomains[@]}"; do
        # Fetch DNS records
        result=$(dig "$sub.$domain" +short)

        # Determine record type
        if [[ -z "$result" ]]; then
            echo "The subdomain $sub.$domain does not have any DNS record."
        else
            if [[ "$result" =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
                record_type="A"
            elif [[ "$result" =~ : ]]; then
                record_type="AAAA"
            else
                record_type="CNAME"
            fi

            echo "The subdomain $sub.$domain is a $record_type record and points to $result"
        fi
    done
}

# Validate arguments
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [<subdomain>]"
    exit 1
fi

# Retrieve arguments
domain="$1"
subdomain="$2"

# Call the function to get and display DNS information
get_dns_info "$domain" "$subdomain"

