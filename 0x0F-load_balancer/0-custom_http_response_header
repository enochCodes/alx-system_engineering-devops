#!/bin/bash
# Script to configure Nginx with a custom HTTP response header

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Get the hostname of the server
HOSTNAME=$(hostname)

# Add custom header to Nginx configuration
sudo sed -i '/http {/a \\tserver_tokens off;\n\tadd_header X-Served-By '"$HOSTNAME"';' /etc/nginx/nginx.conf

# Restart Nginx to apply changes
sudo systemctl restart nginx

# Output the status of Nginx to confirm it's running
sudo systemctl status nginx | grep "active (running)"
